import java.util.*;

public class Main {
    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
      int a=sc.nextInt();
      int rem=0,rev=0;
     int temp=a;
      while(a!=0){
        rem=a%10;
       rev*=10;
       rev+=rem;
        a=a/10;
      }

      if(temp==rev){
        System.out.print("YES");
      }
      else{
      System.out.print("NO");
}
}
}
